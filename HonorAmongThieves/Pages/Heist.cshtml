@page
<div class="container">
    <div id="pageName" class="display-2" style="text-decoration:underline; text-align:center">JOIN A GAME</div>
    <div class="state" id="startLobby" style="display:none">
        <h3><u style="text-align:center">PLAYERS IN GAME</u></h3>
        <ul id="lobbyList" class="h4"></ul>

        <div id="startButtonDiv" style="display:none" class="h4">
            At least 2 players are required to start the game.<br />
            Make sure there are no players who are in the lobby but cannot see the game!!.<br />
            <br />
            <div style="text-align:center">
                <input type="button" id="startbutton" value="START" class="display-1" />
                <br />
                <br />
                <div class="display-4">
                    <u>GAME PARAMETERS</u><br />
                    Betrayal Reward: <input type="number" step="1" min="0" value="60" id="betrayalreward" size="2" /><br />
                    Max Game Length: <input type="number" step="1" min="3" value="10" id="maxgamelength" size="2" /><br />
                    Max Heist Size: <input type="number" step="1" min="2" value="5" id="maxheistsize" size="2" /><br />
                    Murder Window: <input type="number" step="1" min="-1" value="4" id="snitchmurderwindow" size="2" /><br />
                </div>
            </div>
            <br />
        </div>
    </div>
    <div class="row">&nbsp;</div>

    <div class="state" id="joinroom">
        <div class="display-3" style="text-align:center">
            Name: <input type="text" id="username" maxlength="10" size="10" oninput="this.value = this.value.toUpperCase()" /><br />
            Room ID: <input type="text" id="roomid" maxlength="5" size="5" oninput="this.value = this.value.toUpperCase()" /><br /><br />
            <input type="button" class="display-1" id="joinroombutton" value="JOIN" />
        </div>
        <h3>
            <br />
            Names are unique per room.<br />
            Only letters and numbers allowed in username. Username cannot be longer than 10 letters.<br />
            You need a username to create a room.<br />
            Room ID is automatically generated when you create a room. <br />
        </h3>
    <hr />
        <div style="text-align:center" class="display-1">
            <input type="button" id="createroombutton" value="CREATE" />
        </div>
    </div>

    <div class="state" id="gamestart" style="display:none">
        <div class="state" id="heiststatus" style="display:none">
            <div class="state h3" id="heistmembers" style="display:none">
                <u>Heist Members:</u>
                <ul id="heistMemberList"></ul>
            </div>
            <div style="text-align:center">
                <h2 id="heiststatusmessage"></h2><br />
                <input type="button" id="okaybutton" value="OKAY" class="display-1" style="display: block; margin:0 auto;" />
            </div>
        </div>

        <div class="state" id="heistsetup" style="display:none">
            <h1 id="heistnetworth"></h1>
            <h1 id="snitchingreward"></h1>
            <br />
            <div style="text-align:center" class="h3">
                <u>HEIST PARTICIPANTS</u>
                <table border="1" id="heistparticipants" align="center" class="h4">
                    <tr>
                        <th>Name</th>
                        <th>Valuation</th>
                        <th>Years In Jail</th>
                    </tr>
                </table>
            </div>
            <hr />
            <div class="display-4" style="text-align:center">
                GO ON HEIST: <input type="checkbox" id="goforheistcheck" style="width:60px; height:60px" checked /> <br />
                SNITCH TO POLICE: <input type="checkbox" id="snitchtopolicecheck" style="width:60px; height:60px" /> <br />
                <input type="button" id="makedecision" value="DECIDE" class="display-3" />
            </div>
            <hr />
            <br />
            <div class="display-4" style="text-align:center">
                MURDER: <select id="commitmurderselection"></select> <br /><br />
                <input type="button" id="commitmurder" value="MURDER" class="display-3" />
            </div>
            <br />
        </div>
        <hr />
        <div class="h3">
            <u>Player Information</u>
            <div id="playername"></div>
            <div id="years"></div>
            <div id="networth"></div>
            <div id="nextjailtime"></div>
            <div id="yearstillsnitchingpurge"></div>
        </div>
    </div>

    <div class="state h2" id="endofgame" style="display:none; text-align:center">
        <div id="finalyear"> </div>
        <table border="1px solid black" id="leaderboard" style="font-size:100%" align="center" class="h2">
            <tr>
                <th>Thief</th>
                <th>Networth</th>
                <th>Snitch Count</th>
                <th>Jail Time</th>
            </tr>
        </table>
        <hr />
        <a href="/">FINISH</a>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/heist.js"></script>

