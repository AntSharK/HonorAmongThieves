@page
<div class="container">
    <div id="pageName" class="display-4" style="text-decoration:underline; text-align:center">JOIN A GAME</div>

    <!------ JOIN/CREATE MENU --------->
    <div class="state" id="joinroom">
        <div class="display-4" style="text-align:center">
            Bakery Name: <input type="text" id="username" maxlength="10" size="10" oninput="this.value = this.value.toUpperCase()" /><br />
            Room ID: <input type="text" id="roomid" maxlength="5" size="5" oninput="this.value = this.value.toUpperCase()" /><br /><br />
            <input type="button" class="display-1" id="joinroombutton" value="JOIN" />
        </div>
        <h4>
            <br />
            Names are unique per room.<br />
            Only letters and numbers allowed in username. Bakery name cannot be longer than 10 letters.<br />
            You need a bakery name to create a room.<br />
            Room ID is automatically generated when you create a room. <br />
        </h4>
        <hr />
        <div style="text-align:center" class="display-1">
            <input type="button" id="createroombutton" value="CREATE" />
        </div>
    </div>

    <!------- GAME START LOBBY -------->
    <div class="state" id="startLobby" style="display:none">
        <h3><u style="text-align:center">PLAYERS IN GAME</u></h3>
        <div id="lobbyplayercount" class="h4"></div>
        <ul id="lobbyList" class="h4"></ul>

        <div id="startButtonDiv" style="display:none" class="h5">
            At least 2 players are required to start the game.<br />
            Make sure there are no players who are in the lobby but cannot see the game!!.<br />
            <br />
            <div style="text-align:center">
                <input type="button" id="startbutton" value="BEGIN GAME" class="display-2" /><br /><br />
                <br />
                <br />
                <div class="display-4">
                    <u>GAME PARAMETERS</u><br />
                    Starting Cash: <input type="number" step="1" min="0" max="9999999" value="1000" id="startingcash" /><br />
                    Game Length: <input type="number" step="1" min="2" max="999" value="7" id="gamelength" /><br />
                </div>
            </div>
        </div>
    </div>

    <!------ BAKE THINGS --------->
    <div class="state" id="bakegoods" style="display:none">
        <div class="display-4" style="text-align:center">
            <div id="currentyear" class="h3"></div>
            <input type="button" id="switchtoupgradeviewbutton" value="VIEW UPGRADES" /> <hr />
            <table align="center" class="h2" border="1px solid black" cellpadding="3%">
                <tr>
                    <td id="moneyowned" colspan="4"></td>
                </tr>
                <tr>
                    <th></th>
                    <th>Price</th>
                    <th>Amount</th>
                    <th>On Hand</th>
                </tr>
                <tr>
                    <td>Flour</td>
                    <td id="flourprice"></td>
                    <td> <input type="number" step="1" min="0" max="9999" value="0" id="buyflouramount" /> </td>
                    <td id="flourowned"></td>
                </tr>
                <tr>
                    <td>Sugar</td>
                    <td id="sugarprice"></td>
                    <td> <input type="number" step="1" min="0" max="9999" value="0" id="buysugaramount" /> </td>
                    <td id="sugarowned"></td>
                </tr>
                <tr>
                    <td>Butter</td>
                    <td id="butterprice"></td>
                    <td> <input type="number" step="1" min="0" max="9999" value="0" id="buybutteramount" /> </td>
                    <td id="butterowned"></td>
                </tr>
                <tr>
                    <!-- TODO: Grey out button when cost exceeds. Display current cost. -->
                    <td colspan="3"><input type="button" id="buyingredientsbutton" value="BUY INGREDIENTS" /></td>
                </tr>
            </table> <hr />

            <table align="center" class="h2" border="1px solid black" cellpadding="3%">
                <tr>
                    <th></th>
                    <th>Cost</th>
                    <th>Flour</th>
                    <th>Sugar</th>
                    <th>Butter</th>
                    <th>Amount</th>
                    <th>On Hand</th>
                </tr>
                <tr>
                    <td>Cookie</td>
                    <td id="cookiepricemoney"></td>
                    <td id="cookiepriceflour"></td>
                    <td id="cookiepricesugar"></td>
                    <td id="cookiepricebutter"></td>
                    <td><input type="number" step="1" min="0" max="9999" value="0" id="bakecookiesamount" /></td>
                    <td id="cookiesbaked"></td>
                </tr>
                <tr>
                    <td>Croissant</td>
                    <td id="croissantpricemoney"></td>
                    <td id="croissantpriceflour"></td>
                    <td id="croissantpricesugar"></td>
                    <td id="croissantpricebutter"></td>
                    <td><input type="number" step="1" min="0" max="9999" value="0" id="bakecroissantsamount" /></td>
                    <td id="croissantsbaked"></td>
                </tr>
                <tr>
                    <td>Cake</td>
                    <td id="cakepricemoney"></td>
                    <td id="cakepriceflour"></td>
                    <td id="cakepricesugar"></td>
                    <td id="cakepricebutter"></td>
                    <td><input type="number" step="1" min="0" max="9999" value="0" id="bakecakesamount" /></td>
                    <td id="cakesbaked"></td>
                </tr>
                <tr>
                    <td colspan="6"><input type="button" id="bakethingsbutton" value="BAKE THINGS" /></td>
                </tr>
            </table> <hr />
        </div>
        <hr />
        <div style="text-align:center" class="display-1">
            <input type="button" id="endturnbutton" value="END TURN" />
        </div>
    </div>

    <!------ TODO: UPGRADE THINGS --------->
    <div class="state" id="upgrademenu" style="display:none">
        <div class="display-4" style="text-align:center">
            <input type="button" id="switchtobakeviewbutton" value="BACK TO BAKING" /> <hr />
            <table align="center" class="h2" border="1px solid black" cellpadding="3%">
                <tr>
                <tr>
                    <td id="moneyowned2" colspan="4"></td>
                </tr>
                    <th></th>
                    <th>Owned</th>
                    <th></th>
                    <th>Baked</th>
                </tr>
                <tr>
                    <td>Flour</td>
                    <td id="flourowned2"></td>
                    <td>Cookies</td>
                    <td id="cookiesbaked2"></td>
                </tr>
                <tr>
                    <td>Butter</td>
                    <td id="butterowned2"></td>
                    <td>Croissants</td>
                    <td id="croissantsbaked2"></td>
                </tr>
                <tr>
                    <td>Sugar</td>
                    <td id="sugarowned2"></td>
                    <td>Cakes</td>
                    <td id="cakesbaked2"></td>
                </tr>
            </table> <hr />
        </div>
    </div>

    <!------ TODO: YOUR MARKET SUMMARY --------->
    <div class="state" id="goodsbaked" style="display:none">
        <div class="display-4" style="text-align:center">
        </div>
    </div>

    <!------ TODO: YEAR'S MARKET REPORT --------->
    <div class="state" id="marketreport" style="display:none">
        <div class="display-4" style="text-align:center">
        </div>
    </div>

    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/cakery.js"></script>
</div>

