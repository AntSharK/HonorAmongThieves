@page
<div class="container">

    <div class="state" id="joinroom">
        <div class="display-4" style="text-align:center">
            Bakery Name: <input type="text" id="username" maxlength="10" size="10" oninput="this.value = this.value.toUpperCase()" /><br />
            Room ID: <input type="text" id="roomid" maxlength="5" size="5" oninput="this.value = this.value.toUpperCase()" /><br /><br />
            <input type="button" class="display-1" id="joinroombutton" value="JOIN" />
        </div>
        <h4>
            <br />
            Names are unique per room.<br />
            Only letters and numbers allowed in username. Bakery name cannot be longer than 10 letters.<br />
            You need a bakery name to create a room.<br />
            Room ID is automatically generated when you create a room. <br />
        </h4>
    <hr />
        <div style="text-align:center" class="display-1">
            <input type="button" id="createroombutton" value="CREATE" />
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/cakery.js"></script>

